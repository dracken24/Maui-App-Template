			<!-- Carte Fonctionnalités -->
			<Frame BackgroundColor="White" 
				   CornerRadius="15" 
				   Padding="25" 
				   HasShadow="True">
				<StackLayout>
					<Label Text="⚙️" 
						   FontSize="40" 
						   HorizontalOptions="Center"/>
					<Label Text="Fonctionnalités" 
						   FontSize="18" 
						   FontAttributes="Bold" 
						   TextColor="#333333" 
						   HorizontalOptions="Center"/>
					<Label Text="Permet de créer ou supprimer des utilisateurs. Ajouter, modifier ou supprimer des événements sur le calendrier. Les événements sont supprimés en cascade lors de la suppression d'un utilisateur."
						   FontSize="14" 
						   TextColor="#666666"
						   HorizontalTextAlignment="Center"
						   LineHeight="2"/>
					<Button Text="Voir les fonctionnalités" 
							BackgroundColor="#6C757D" 
							TextColor="White" 
							CornerRadius="10"
							Margin="0,15,0,0"
							Clicked="OnFonctionnalitesClicked"/>
				</StackLayout>
			</Frame>

			<!-- Statistiques rapides -->
			<Frame BackgroundColor="#E8F4FD" 
				   CornerRadius="15" 
				   Padding="25" 
				   HasShadow="True">
				<StackLayout>
					<Label Text="📊 Statistiques rapides" 
						   FontSize="18" 
						   FontAttributes="Bold" 
						   TextColor="#007ACC" 
						   HorizontalOptions="Center"/>
					<Grid Margin="0,15,0,0">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="*"/>
							<ColumnDefinition Width="*"/>
						</Grid.ColumnDefinitions>
						<Grid.RowDefinitions>
							<RowDefinition Height="Auto"/>
							<RowDefinition Height="Auto"/>
						</Grid.RowDefinitions>

						<StackLayout Grid.Row="0" Grid.Column="0" HorizontalOptions="Center">
							<Label x:Name="TotalRendezVousLabel" 
								   Text="0" 
								   FontSize="24" 
								   FontAttributes="Bold" 
								   TextColor="#007ACC" 
								   HorizontalOptions="Center"/>
							<Label Text="Rendez-vous" 
								   FontSize="12" 
								   TextColor="#666666" 
								   HorizontalOptions="Center"/>
						</StackLayout>

						<StackLayout Grid.Row="0" Grid.Column="1" HorizontalOptions="Center">
							<Label x:Name="RendezVousAujourdhuiLabel" 
								   Text="0" 
								   FontSize="24" 
								   FontAttributes="Bold" 
								   TextColor="#28A745" 
								   HorizontalOptions="Center"/>
							<Label Text="Aujourd'hui" 
								   FontSize="12" 
								   TextColor="#666666" 
								   HorizontalOptions="Center"/>
						</StackLayout>
					</Grid>
				</StackLayout>
			</Frame>

			<!-- Actions rapides -->
			<Label Text="Actions rapides" 
				   FontSize="18" 
				   FontAttributes="Bold" 
				   TextColor="#00B6C3"/>

			<Grid ColumnSpacing="10">
				<Grid.ColumnDefinitions>
					<!-- <ColumnDefinition Width="*"/> -->
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>

				<!-- <Button Grid.Column="0" 
						Text="➕ Nouveau RDV" 
						BackgroundColor="#28A745" 
						TextColor="White" 
						CornerRadius="10"
						HeightRequest="50"
						Clicked="OnNouveauRendezVousClicked"/> -->

				<Button Grid.Column="1" 
						Text="🔧 Paramètres" 
						BackgroundColor="#6C757D" 
						TextColor="White" 
						CornerRadius="10"
						HeightRequest="50"
						Clicked="OnParametresClicked"/>
			</Grid>
		</StackLayout>
	</ScrollView>
</ContentPage>
