<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="MauiTemplate.Pages.AccueilPage"
			 xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 Title="Accueil"
			 BackgroundColor="{DynamicResource PageBackgroundColor}">

	<ScrollView>
		<StackLayout Padding="20" Spacing="20">
			<!-- En-tête -->
			<Frame BackgroundColor="#007ACC" 
				   CornerRadius="15" 
				   Padding="30,20" 
				   HasShadow="True">
				<StackLayout>
					<Label Text="🏠" 
						   FontSize="40" 
						   HorizontalOptions="Center"/>
					<Label Text="Bienvenue" 
						   FontSize="24" 
						   FontAttributes="Bold" 
						   TextColor="White" 
						   HorizontalOptions="Center"/>
					<Label x:Name="WelcomeLabel" 
						   Text="Application Bureau - Page d'accueil" 
						   FontSize="14" 
						   TextColor="#E0E0E0" 
						   HorizontalOptions="Center"/>
				</StackLayout>
			</Frame>

			<!-- Section de présentation -->
			<Frame BackgroundColor="#F8F9FA" 
				   CornerRadius="15" 
				   Padding="25" 
				   HasShadow="True">
				<StackLayout>
					<Label Text="À propos de cette application" 
						   FontSize="18" 
						   FontAttributes="Bold" 
						   TextColor="#333333"/>
					<Label Text="Cette application MAUI mobile vous permet de gérer vos rendez-vous et événements de manière intuitive et efficace."
						   FontSize="14" 
						   TextColor="#666666"
						   LineHeight="2"/>
				</StackLayout>
			</Frame>

			<!-- Cartes de fonctionnalités -->
			<!-- <Label Text="Fonctionnalités principales" 
				   FontSize="18" 
				   FontAttributes="Bold" 
				   TextColor="#00B6C3"/> -->

			<!-- Carte Calendrier -->
