<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="MauiTemplate.Pages.FonctionnalitesPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Fonctionnalités"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <ScrollView>
        <StackLayout Padding="20" Spacing="20">
            <!-- En-tête -->
            <Frame BackgroundColor="#6C757D" 
                   CornerRadius="15" 
                   Padding="30,20" 
                   HasShadow="True">
                <StackLayout>
                    <Label Text="⚙️" 
                           FontSize="40" 
                           HorizontalOptions="Center"/>
                    <Label Text="Fonctionnalités" 
                           FontSize="24" 
                           FontAttributes="Bold" 
                           TextColor="White" 
                           HorizontalOptions="Center"/>
                    <Label Text="Gérez les utilisateurs et les événements" 
                           FontSize="14" 
                           TextColor="#E0E0E0" 
                           HorizontalOptions="Center"/>
                </StackLayout>
            </Frame>

            <!-- Gestion des utilisateurs -->
            <Frame BackgroundColor="White" 
                   CornerRadius="15" 
                   Padding="25" 
                   HasShadow="True">
                <StackLayout>
                    <Label Text="👥 Gestion des utilisateurs" 
                           FontSize="18" 
                           FontAttributes="Bold" 
                           TextColor="#333333"/>
                    <Label Text="Créez, modifiez ou supprimez des utilisateurs du système."
                           FontSize="14" 
                           TextColor="#666666"
                           Margin="0,10,0,15"/>

                    <Button Text="➕ Créer un utilisateur" 
                            BackgroundColor="#28A745" 
                            TextColor="White" 
                            CornerRadius="10"
                            HeightRequest="45"
                            Clicked="OnCreateUserClicked"/>

                    <Button Text="👥 Voir tous les utilisateurs" 
                            BackgroundColor="#17A2B8" 
                            TextColor="White" 
                            CornerRadius="10"
                            HeightRequest="45"
                            Margin="0,10,0,0"
                            Clicked="OnViewUsersClicked"/>
                </StackLayout>
            </Frame>

            <!-- Gestion des événements -->
            <Frame BackgroundColor="White" 
                   CornerRadius="15" 
                   Padding="25" 
                   HasShadow="True">
                <StackLayout>
                    <Label Text="📅 Gestion des événements" 
                           FontSize="18" 
                           FontAttributes="Bold" 
                           TextColor="#333333"/>
                    <Label Text="Ajoutez, modifiez ou supprimez des événements sur le calendrier."
                           FontSize="14" 
                           TextColor="#666666"
                           Margin="0,10,0,15"/>

                    <Button Text="➕ Créer un événement" 
                            BackgroundColor="#28A745" 
                            TextColor="White" 
                            CornerRadius="10"
                            HeightRequest="45"
                            Clicked="OnCreateEventClicked"/>

                    <Button Text="📋 Voir tous les événements" 
                            BackgroundColor="#17A2B8" 
                            TextColor="White" 
                            CornerRadius="10"
                            HeightRequest="45"
                            Margin="0,10,0,0"
                            Clicked="OnViewEventsClicked"/>
                </StackLayout>
            </Frame>

            <!-- Statistiques système -->
            <Frame BackgroundColor="#E8F4FD" 
                   CornerRadius="15" 
                   Padding="25" 
                   HasShadow="True">
                <StackLayout>
                    <Label Text="📊 Statistiques système" 
                           FontSize="18" 
                           FontAttributes="Bold" 
                           TextColor="#007ACC" 
                           HorizontalOptions="Center"/>
                    
                    <Grid Margin="0,15,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackLayout Grid.Row="0" Grid.Column="0" HorizontalOptions="Center">
                            <Label x:Name="TotalUsersLabel" 
                                   Text="0" 
                                   FontSize="24" 
                                   FontAttributes="Bold" 
                                   TextColor="#007ACC" 
                                   HorizontalOptions="Center"/>
                            <Label Text="Utilisateurs" 
                                   FontSize="12" 
                                   TextColor="#666666" 
                                   HorizontalOptions="Center"/>
                        </StackLayout>

                        <StackLayout Grid.Row="0" Grid.Column="1" HorizontalOptions="Center">
                            <Label x:Name="TotalEventsLabel" 
                                   Text="0" 
                                   FontSize="24" 
                                   FontAttributes="Bold" 
                                   TextColor="#28A745" 
                                   HorizontalOptions="Center"/>
                            <Label Text="Événements" 
                                   FontSize="12" 
                                   TextColor="#666666" 
                                   HorizontalOptions="Center"/>
                        </StackLayout>
                    </Grid>
                </StackLayout>
            </Frame>

            <!-- Actions système -->
            <Frame BackgroundColor="White" 
                   CornerRadius="15" 
                   Padding="25" 
                   HasShadow="True">
                <StackLayout>
                    <Label Text="🔧 Actions système" 
                           FontSize="18" 
                           FontAttributes="Bold" 
                           TextColor="#333333"/>
                    <Label Text="Actions avancées pour la gestion du système."
                           FontSize="14" 
                           TextColor="#666666"
                           Margin="0,10,0,15"/>

                    <Button Text="🗑️ Nettoyer la base de données" 
                            BackgroundColor="#DC3545" 
                            TextColor="White" 
                            CornerRadius="10"
                            HeightRequest="45"
                            Clicked="OnCleanDatabaseClicked"/>

                    <Button Text="📤 Exporter les données" 
                            BackgroundColor="#FFC107" 
                            TextColor="Black" 
                            CornerRadius="10"
                            HeightRequest="45"
                            Margin="0,10,0,0"
                            Clicked="OnExportDataClicked"/>
                </StackLayout>
            </Frame>
        </StackLayout>
    </ScrollView>
</ContentPage>
